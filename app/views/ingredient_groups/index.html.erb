<p id="notice"><%= notice %></p>

<h1>Ingredient Groups</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Recipe</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @ingredient_groups.each do |ingredient_group| %>
      <tr>
        <td><%= ingredient_group.title %></td>
        <td><%= ingredient_group.recipe %></td>
        <td><%= link_to 'Show', ingredient_group %></td>
        <td><%= link_to 'Edit', edit_ingredient_group_path(ingredient_group) %></td>
        <td><%= link_to 'Destroy', ingredient_group, data: { turbo_method: :delete, turbo_confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Ingredient Group', new_ingredient_group_path %>
