<div class="container">
  <div class="section">
    <p id="notice"><%= notice %></p>

    <h1 class="title"><%= Cuisine.model_name.human %></h1>

    <table class="table">
      <thead>
        <tr>
          <th><%= Cuisine.human_attribute_name("title") %></th>
          <th colspan="3"></th>
        </tr>
      </thead>

      <tbody>
        <% @cuisines.each do |cuisine| %>
          <tr>
            <td><%= cuisine.title %></td>
            <td><%= link_to t(".show"), cuisine %></td>
            <td><%= link_to t(".edit"), edit_cuisine_path(cuisine) %></td>
            <td><%= link_to t(".destroy"), cuisine, data: { turbo_method: :delete, turbo_confirm: t(".are_you_sure") } %></td>
          </tr>
        <% end %>
      </tbody>
    </table>

    <br>

    <%= link_to t(".new"), new_cuisine_path, class: "button is-primary"%>
  </div>
</div>
