<div class="container">
  <div class="section">
    <p id="notice"><%= notice %></p>

    <h1 class="title"><%= Course.model_name.human %></h1>

    <table class="table">
      <thead>
        <tr>
          <th><%= Course.human_attribute_name("title") %></th>
          <th colspan="3"></th>
        </tr>
      </thead>

      <tbody>
        <% @courses.each do |course| %>
          <tr>
            <td><%= course.title %></td>
            <td><%= link_to t(".show"), course %></td>
            <td><%= link_to t(".edit"), edit_course_path(course) %></td>
            <td><%= link_to t(".destroy"), course, data: { turbo_method: :delete, turbo_confirm: t(".are_you_sure") } %></td>
          </tr>
        <% end %>
      </tbody>
    </table>

    <br>

    <%= link_to t(".new"), new_course_path, class: "button is-primary"%>
  </div>
</div>
