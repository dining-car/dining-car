<div class="instruction-group-nested-fields box" id="instruction_group_<%= f.index %>">
  <div class="field is-horizontal">
    <div class="field-label is-normal">
      <%= f.label t('.group_title'), class: 'label' %>
    </div>
    <div class="field-body">
      <div class="field">
        <div class="control is-expanded">
          <%= f.text_field :title, class: 'input is-fullwidth' %>
        </div>
      </div>
      <div class="field is-narrow">
        <div class="control">
          <%= link_to instruction_group_path(f.index),
            data: {turbo_method: :delete, turbo_stream: true},
            class: 'button is-danger is-outlined' do %>
          <span><%= t('.delete_instruction_group') %></span>
          <span class="icon is-small">
            <i class="fa fa-times"></i>
          </span>
          <% end %>
        </div>
      </div>
    </div>
  </div>
  <div class="field is-horizontal">
    <div class="field-label is-normal">
      <%= f.label :instructions, class: 'label' %>
    </div>
    <div class="field-body">
      <div class="field">
        <div class="control is-expanded">
          <%= f.text_area :instructions, class: 'textarea is-fullwidth' %>
        </div>
      </div>
    </div>
  </div>
</div>
